<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".WelcomeActivity">

    <!-- Imagen de la comida -->
    <ImageView
        android:id="@+id/imagenComida"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Nombre de la comida -->

    <!-- Dificultad de la receta -->
    <TextView
        android:id="@+id/nombreComida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:text="Nombre de la receta"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imagenComida"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Tiempo de preparaciÃ³n -->

    <TextView
        android:id="@+id/dificultadComida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:text="Dificultad"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/imagenComida"
        app:layout_constraintTop_toBottomOf="@id/nombreComida" />

    <TextView
        android:id="@+id/tiempoComida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="4dp"
        android:text="Tiempo"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/imagenComida"
        app:layout_constraintTop_toBottomOf="@id/dificultadComida" />

</androidx.constraintlayout.widget.ConstraintLayout>
